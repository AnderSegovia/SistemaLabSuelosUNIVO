{% extends 'base.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
    {% block styles %}
<link rel="stylesheet" href="{{ asset('assets  /css/stylesForm.css') }}">
    {% endblock %}
        <h1>Editar Usuario</h1>

<div class="form-container">
    <form action="" method="post">
        <div class="form-group">
            <label for="codigoUsuario">Código de Usuario:</label>
            <input type="text" class="form-control" id="codigoUsuario" name="codigoUsuario" value="{{ usuario.codigoUsuario }}">
        </div>
        <div class="form-group">
            <label for="nombreUsuario">Nombre de Usuario:</label>
            <input type="text" class="form-control" id="nombreUsuario" name="nombreUsuario" value="{{ usuario.nombreUsuario }}">
        </div>
        <div class="form-group">
            <label for="numeroDui">Número de DUI:</label>
            <input type="text" class="form-control" id="numeroDui" name="numeroDui" value="{{ usuario.numeroDui }}">
        </div>
        <div class="form-group">
            <label for="edad">Edad:</label>
            <input type="text" class="form-control" id="edad" name="edad" value="{{ usuario.edad }}">
        </div>
        <div class="form-group">
            <label for="telefono">Teléfono:</label>
            <input type="text" class="form-control" id="telefono" name="telefono" value="{{ usuario.telefono }}">
        </div>
            <div class="form-group">
                <label for="fk_rol">Rol:</label>
                <select class="form-control" id="fk_rol" name="fk_rol" required>
                    {% for nombreRol in roles %}
                        {% if nombreRol.nombreRol == usuario.fkRol.nombreRol %}
                            <option value="{{ nombreRol.idRol }}" selected>{{ nombreRol.nombreRol }}</option>
                        {% else %}
                            <option value="{{ nombreRol.idRol }}">{{ nombreRol.nombreRol }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    </form>
</div>
{% endblock %}
