<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="icon" type="image/png" href="{{ asset('assets /img/icono.png') }}">
    <link rel="stylesheet" href="{{ asset('assets  /css/stylesLogin.css') }}">
</head>
<body>
    <div class="background">
        <div class="shapes">
            <div class="circle"></div>
            <div class="square"></div>
            <div class="triangle"></div>
            <div class="cylinder"></div>
            <div class="cylinder"></div> 
            <div class="cylinder"></div> 
            <div class="cylinder"></div>
            <div class="pentagon"></div>
            <div class="hexagon"></div>
        </div>
    </div>
    
    <div class="login-container">
        <div class="login-card">
            <h1>Login</h1>
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input type="text" id="codigo_usuario" name="codigo_usuario" required>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="contra_usuario" name="contra_usuario" required>

<div id="error-alert" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none; background-color: #ffcccc; border-color: #ff9999; color: #cc0000;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

                </div>
                <button type="submit" class="btn">Iniciar Sesión</button>
            </form>
        </div>
    </div>
</body>
<script>
    {% for message in app.flashes('error') %}
        var errorMessage = "{{ message }}";
    {% endfor %}

    if (typeof errorMessage !== 'undefined' && errorMessage !== '') {
        document.getElementById('error-alert').innerHTML += errorMessage;
        document.getElementById('error-alert').style.display = 'block';
    }
</script>

</html>